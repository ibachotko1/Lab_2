<Page x:Class="Warehouse.Front.Pages.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="InventoryPage"
      Background="White"
      FontFamily="Segoe UI"
      FontSize="14">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Инвентаризация" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Товар (SKU):" Width="140" VerticalAlignment="Center"/>
                <ComboBox x:Name="SkuCombo" Width="360" Height="28" SelectionChanged="SkuCombo_SelectionChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Текущий остаток:" Width="140" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtCurrentQty" Width="360" VerticalAlignment="Center" Text="—"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Фактическое количество:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="txtActualQty" Width="360" Height="28" PreviewTextInput="Integer_PreviewTextInput"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Причина расхождения:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="txtReason" Width="360" Height="28"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Дата инвентаризации:" Width="140" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpAdjustmentDate" Width="360" Height="28"/>
            </StackPanel>
        </StackPanel>

        <!-- Подсказка/разница -->
        <TextBlock Grid.Row="2" x:Name="txtDiff" Text="" Margin="0,0,0,12" FontWeight="SemiBold" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Очистить" Width="120" Margin="0,0,8,0" Click="BtnClear_Click"/>
            <Button Content="Применить корректировку" Width="200" Background="#2ECC71" Foreground="White" Click="BtnApply_Click"/>
        </StackPanel>
    </Grid>
</Page>
