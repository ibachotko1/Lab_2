<Page x:Class="Warehouse.Front.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProductsPage">
    <Grid Margin="10">
        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="*"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Цена за ед." Binding="{Binding PricePerUnit}" Width="*"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier}" Width="*"/>
                <DataGridTextColumn Header="Дата поставки" Binding="{Binding LastDeliveryDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
