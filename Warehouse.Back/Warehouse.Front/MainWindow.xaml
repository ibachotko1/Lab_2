<Window x:Class="Warehouse.Front.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления складом" Height="500" Width="900">
    <DockPanel>
        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Background="#2C3E50" Height="50" DockPanel.Dock="Top">
            <Button Content="Товары" Width="150" Margin="5" Click="Products_Click"/>
            <Button Content="Приемка" Width="150" Margin="5" Click="Receive_Click"/>
            <Button Content="Списание" Width="150" Margin="5" Click="WriteOff_Click"/>
            <Button Content="Инвентаризация" Width="150" Margin="5" Click="Inventory_Click"/>
            <Button Content="Операции" Width="150" Margin="5" Click="Operations_Click"/>
        </StackPanel>

        <!-- Контент -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
